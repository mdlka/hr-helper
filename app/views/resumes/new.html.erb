<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">Обработка резюме</h2>
      </div>
      <div class="card-body">
        <%= form_with(model: @resume, local: true) do |f| %>
          <% if @resume.errors.any? %>
            <div class="alert alert-danger">
              <h5 class="alert-heading">Ошибка при обработке резюме:</h5>
              <ul class="mb-0">
                <% @resume.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :content, "Вставьте текст резюме", class: "form-label" %>
            <div class="form-text text-muted mb-2">
              Минимальная длина текста: <%= Resume::MIN_CONTENT_LENGTH %> символов
            </div>
            <%= f.text_area :content, 
                rows: 15, 
                class: "form-control #{'is-invalid' if @resume.errors[:content].any?}", 
                placeholder: "Вставьте текст резюме..." %>
          </div>

          <div class="d-grid">
            <%= f.submit "Обработать резюме", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 