<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0"><%= t('resumes.new.title') %></h2>
      </div>
      <div class="card-body">
        <%= form_with(model: @resume, local: true) do |f| %>
          <% if @resume.errors.any? %>
            <div class="alert alert-danger">
              <h5 class="alert-heading"><%= t('errors.messages.not_saved') %></h5>
              <ul class="mb-0">
                <% @resume.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :content, t('resumes.new.content_label'), class: "form-label" %>
            <div class="form-text text-muted mb-2">
              <p class="mb-1">Требования к резюме:</p>
              <ul class="mb-2">
                <li>Минимальная длина текста: <%= Resume::MIN_CONTENT_LENGTH %> символов</li>
                <li>Должен быть указан email или номер телефона</li>
                <li>Телефон должен быть в формате: +7(XXX)XXX-XX-XX или 8XXXXXXXXXX</li>
              </ul>
            </div>
            <%= f.text_area :content, 
                rows: 15, 
                class: "form-control #{'is-invalid' if @resume.errors[:content].any?}", 
                placeholder: "Вставьте текст резюме..." %>
          </div>

          <div class="d-grid">
            <%= f.submit t('resumes.new.submit'), class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 