<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">Process Resume</h2>
      </div>
      <div class="card-body">
        <%= form_with(model: @resume, local: true) do |f| %>
          <% if @resume.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@resume.errors.count, "error") %> prohibited this resume from being saved:</h4>
              <ul>
                <% @resume.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :content, "Paste Resume Text", class: "form-label" %>
            <%= f.text_area :content, rows: 15, class: "form-control", placeholder: "Paste the resume content here..." %>
          </div>

          <div class="d-grid">
            <%= f.submit "Process Resume", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 